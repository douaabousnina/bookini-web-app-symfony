{% extends 'UserInterface/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/loginRegister.css') }}"/>
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block content %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

    
       <div class="checkbox mb-3">
           <label>
               <input type="checkbox" name="_remember_me"> Remember me
           </label>
       </div>
    

        <button class="submit-btn" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}
