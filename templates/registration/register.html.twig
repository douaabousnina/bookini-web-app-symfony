{% extends 'UserInterface/base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/Register.css') }}"/>
{% endblock %}

{% block title %}
	Register
{% endblock %}

{% block content %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h1>Register</h1>

	<h4 style="transform: translate(39%, 1%);">
		Already have an account?
		<a href="{{path('app_login')}}">log in!</a>
	</h4>

	{{ form_start(registrationForm) }}

	{{ form_errors(registrationForm) }}

	{{ form_row(registrationForm.user_email, {
            label: 'Email:'
        }) }}
	{{ form_row(registrationForm.user_fullname, {
            label: 'Full Name:'
        }) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Password:'
        }) }}
	{#{ form_row(registrationForm.roles, {
					            label: 'Roles:'
					        }) }#}
	{{ form_row(registrationForm.agreeTerms, {
            label: 'I have read and agree to the terms of service\n:'
        })  }}

	<button type="submit" class="btn">Register</button>
	{{ form_end(registrationForm) }}
{% endblock %}
