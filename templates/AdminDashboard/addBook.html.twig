{% extends '/AdminDashboard/base.html.twig' %}

{% block title %}
	Add book
{% endblock %}

{% block content %}
	<a href="books.php" class="go-back">
		<span class="material-symbols-outlined">
			arrow_back
		</span>
		<h3>Go back</h3>
	</a>

	<div class="edit-book">
		<h1>Add Book</h1>
		{{ form_start(form, {'attr': {'class': 'edit-book'}}) }}
		{{ form_errors(form) }}
		{{ form_row(form.bid, {'attr': {'class': 'edit-book'}}) }}
		{{ form_row(form.btitle, {'attr': {'class': 'edit-book'}}) }}
		{{ form_row(form.bprice, {'attr': {'class': 'edit-book'}}) }}
		{{ form_row(form.bdescription, {'attr': {'class': 'edit-book'}}) }}
		{{ form_row(form.bcoverid, {'attr': {'class': 'edit-book'}}) }}
		{{ form_row(form.bauthor, {'attr': {'class': 'edit-book'}}) }}
		<button type="submit" class="btn btn-success">Add Book</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
