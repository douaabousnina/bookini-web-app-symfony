{% extends '/AdminDashboard/base.html.twig' %}

{% block title %}
	Add book
{% endblock %}

{% block content %}
	<a href="books.php" class="go-back">
		<span class="material-symbols-outlined">
			arrow_back
		</span>
		<h3>Go back</h3>
	</a>


		<h1>Add Book</h1>
		{{ form_start(form, {'attr': {'class': 'edit-book'}}) }}
		{{ form_errors(form) }}
		{{ form_row(form.book_id, {'attr': {'class': 'form-control'}}) }}
		{{ form_row(form.book_title, {'attr': {'class': 'form-control'}}) }}
		{{ form_row(form.book_price, {'attr': {'class': 'form-control'}}) }}
		{{ form_row(form.book_description, {'attr': {'class': 'form-control'}}) }}
		{{ form_row(form.book_image, {'attr': {'class': 'form-control'}}) }}
		{{ form_row(form.book_author, {'attr': {'class': 'form-control'}}) }}
		<button type="submit" class="btn btn-success">Add Book</button>
		{{ form_end(form) }}

{% endblock %}
