{% extends '/AdminDashboard/base.html.twig' %}

{% block title %}
	Admin Dashboard
{% endblock %}

{% block content %}
	<main>
		<h1>Home</h1>
		<div class="home">
			<div class="sales">
				<div class="status">
					<div class="info">
						<h3>Monthly Sales</h3>
						<h1>$5,024</h1>
					</div>
					<div class="progresss">
						<svg>
							<circle cx="38" cy="38" r="36"></circle>
						</svg>
						<div class="percentage">
							<p>+81%</p>
						</div>
					</div>
				</div>
			</div>
			<div class="visits">
				<div class="status">
					<div class="info">
						<h3>Site Visit</h3>
						<h1>24,981</h1>
					</div>
					<div class="progresss">
						<svg>
							<circle cx="38" cy="38" r="36"></circle>
						</svg>
						<div class="percentage">
							<p>-48%</p>
						</div>
					</div>
				</div>
			</div>
			<div class="searches">
				<div class="status">
					<div class="info">
						<h3>Searches</h3>
						<h1>14,147</h1>
					</div>
					<div class="progresss">
						<svg>
							<circle cx="38" cy="38" r="36"></circle>
						</svg>
						<div class="percentage">
							<p>+21%</p>
						</div>
					</div>
				</div>
			</div>
			<div class="queue">
				<div class="status">
					<div class="info">
						<h3>Pending Orders</h3>
						<h1>63</h1>
					</div>
					<div class="progresss">
						<svg>
							<circle cx="38" cy="38" r="36"></circle>
						</svg>
						<div class="percentage">
							<p>63</p>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="recent-orders">
			<table>
				<thead>
					<tr>
						<th>Order ID</th>
						<th>Order Date</th>
						<th>Order Total Amount
						</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for order in orders|slice(0, 5) %}
						<tr>
							<td>
								{{order.getId()}}
							</td>
							<td>
								{{order.getOrderDate().format('d-m-Y')}}
							</td>
							<td>
								{{order.getOrderTotalAmount()}}
							</td>
							<td class="action-btns">
								<div style="display: inline-flex;">
									<button class="edit-btn" onclick="location.href='{{path('app_edit_order_admin', {'id' : order.getId()})}}'">
										<span class="material-symbols-outlined">
											edit
										</span>
									</button>
									<form method="POST" action="{{path('app_delete_order_admin', {'id' : order.getId()})}}">
										<button onclick="return confirm('Are you sure you want to delete this order')" type="submit" class="delete-btn" name="delete-order">
											<span class="material-symbols-outlined">
												delete
											</span>
										</button>
									</form>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</main>
{% endblock %}
